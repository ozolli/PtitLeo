            <TextView
                android:text="---"
                android:id="@+id/textViewAWS"
                android:textSize="@dimen/size_data"
                android:layout_gravity="bottom|right"
                style="@style/Font" />
        </FrameLayout>

    </TableRow>

</TableLayout>
